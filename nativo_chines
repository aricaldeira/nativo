    key <AD07> { [ U310c ] };
    key <AD08> { [ U310a ] };
    key <AD09> { [ U310e ] };
    key <AD10> { [ U3106 ] };
    key <AD11> { [ U02ca, U02c7 ] };

    //
    // Linha central
    //
    key <AC01> { [ U3127, U312d ] };
    key <AC02> { [ U311c, U311f, U3123, U3125 ] };
    key <AC03> { [ U311a, U311e, U3122, U3124 ] };
    key <AC04> { [ U311b, U3121 ] };
    key <AC05> { [ U3128, U3120 ] };
    key <AC06> { [ U3107 ] };
    key <AC07> { [ U3109 ] };
    key <AC08> { [ U3119, U3115 ] };
    key <AC09> { [ U3116, U3126 ] };
    key <AC10> { [ U310b ] };
    key <AC11> { [ U02cb, U02d9 ] };

    //
    // Linha inferior
    //
    key <AB01> { [ U3127, U311d ] };
    key <AB02> { [ U3129 ] };
    key <AB03> { [ U3110, U3113 ] };
    key <AB04> { [ U3105 ] };
    key <AB05> { [ U3118, U3114 ] };
    key <AB06> { [ U3111, U3114 ] };
    key <AB07> { [ U3129 ] };
    key <AB08> { [ U310d ] };
    key <AB09> { [ U3108 ] };
    key <AB10> { [ U3117, U3113 ] };
};


