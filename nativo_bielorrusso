partial alphanumeric_keys
xkb_symbols "nativo_bielorrusso" {
    include "nativo_russo(nativo_russo)"
    include "nativo_aspas(nativo_apostrofe_letra)"

    //
    // Linha superior
    //
    key <AD06> { type = "EIGHT_LEVEL_ALPHABETIC", [ Byelorussian_shortu, Byelorussian_SHORTU  ] };

    //
    // Linha central
    //
    key <AC01> { type = "EIGHT_LEVEL_ALPHABETIC", [        Ukrainian_i,       Ukrainian_I ] };
};
