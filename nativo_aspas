// ┣━━━━━┳━━━┹─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┲━━━┻━━━━━━━┫
//
partial alphanumeric_keys
xkb_symbols "nativo_aspas_russo" {
    include "nativo_aspas(nativo_aspas_frances)"

    //
    // Linha superior
    //
    key <AC07> { [ NoSymbol, NoSymbol, U201e] };
    key <AC08> { [ NoSymbol, NoSymbol, leftdoublequotemark, rightdoublequotemark ] };
