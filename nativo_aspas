// ┃Lock     ┃     │     │     │     │     │     │   » │   » │   › │   › │     │     ┃       ┃
// ┣━━━━━┳━━━┹─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┲━━━┻━━━━━━━┫
//
partial alphanumeric_keys
xkb_symbols "nativo_aspas_sueco" {
    //
    // Linha superior
    //
    key <AD07> { [ NoSymbol, NoSymbol, rightdoublequotemark] };
    key <AD08> { [ NoSymbol, NoSymbol, rightdoublequotemark, leftdoublequotemark ] };
    key <AD09> { [ NoSymbol, NoSymbol, rightsinglequotemark ] };
    key <AD10> { [ NoSymbol, NoSymbol, rightsinglequotemark, leftsinglequotemark ] };

    //
    // Linha central
    //
    key <AC07> { [ NoSymbol, NoSymbol, guillemotright ] };
    key <AC08> { [ NoSymbol, NoSymbol, guillemotright, guillemotleft ] };
    key <AC09> { [ NoSymbol, NoSymbol, U203A ] };
    key <AC10> { [ NoSymbol, NoSymbol, U203A, U2039 ] };
};


//
// ┢━━━━━┷━┱───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┺━┳━━━━━━━━━┫
// ┃       ┃     │     │     │     │     │     │     │     │     │     │     │     ┃Enter    ┃
