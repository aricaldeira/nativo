partial alphanumeric_keys
xkb_symbols "nativo_bulgaro" {
    include "nativo_russo(nativo_russo)"
    include "nativo_moeda(nativo_moeda_euro)"

    //
    // Linha central
    //
    key <AC01> { type = "EIGHT_LEVEL_ALPHABETIC", [ NoSymbol, NoSymbol, U045D, U040D ] };

    //
    // Linha inferior
    //
    key <AB06> { type = "EIGHT_LEVEL_ALPHABETIC", [ Cyrillic_hardsign, Cyrillic_HARDSIGN, Cyrillic_yeru, Cyrillic_YERU ] };
};
