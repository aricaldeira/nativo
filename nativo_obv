partial alphanumeric_keys
xkb_symbols "nativo_obv" {
    //
    // Linha numérica
    //
    key <AE11> { [ NoSymbol, NoSymbol, UF8F2, ordfeminine ] };
    key <AE12> { [ NoSymbol, NoSymbol, UF8F1, masculine ] };

    //
    // Linha superior
    //
    key <AD04> { [ w, W ] };
    key <AD05> { [ y, Y ] };
    // key <AD06> { [ dead_voiced_sound, dead_tilde ] };
    key <AD06> { [ dead_acute, dead_circumflex, dead_tilde, dead_grave ] };

    key <AD07> { [ t, T ] };
    key <AD08> { [ k, K ] };
    key <AD09> { [ p, P ] };
    key <AD10> { [ l, L ] };
    key <AD11> { [ h, H, U00b7 ] };
    key <AD12> { [ q, Q, at, ampersand ] };

    //
    // Linha central
    //
    key <AC01> { [ e, E ] };
    key <AC02> { [ u, U ] };
    key <AC03> { [ a, A, agrave, Agrave ] };
    key <AC04> { [ i, I ] };
    key <AC05> { [ o, O ] };

    key <AC06> { [ d, D ] };
    key <AC07> { [ s, S ] };
    key <AC08> { [ n, N ] };
    key <AC09> { [ r, R ] };
    key <AC10> { [ m, M ] };
    key <AC11> { [ c, C, ccedilla, Ccedilla ] };

    //
    // Linha inferior
    //
    // key <LSGT> { [ agrave, Agrave, acircumflex, Acircumflex ] };
    key <AB01> { [ x, X, section, paragraph, x, X ] };
    key <AB02> { [ j, J, NoSymbol, NoSymbol, j, J ] };
    key <AB03> { [ ograve, Ograve, NoSymbol, NoSymbol, ograve, Ograve ] };
    key <AB04> { [ egrave, Egrave, NoSymbol, NoSymbol, egrave, Egrave ] };
    key <AB05> { [ U1EF9, U1EF8, NoSymbol, NoSymbol, U1EF9, U1EF8 ] };

    key <AB06> { [ z, Z ] };
    key <AB07> { [ v, V ] };
    key <AB08> { [ f, F ] };
    key <AB09> { [ b, B ] };
    key <AB10> { [ g, G ] };

    //
    // Teclado numérico
    //
    key <KP7>  { [ UF8D1, UF1A07, UF1A0A, NoSymbol ] }; // 7 ⁷ ↖
    key <KP8>  { [ UF8D0, UF1A08, UF1A0B, NoSymbol ] }; // 8 ⁸ ↑
    key <KP9>  { [ UF8CF, UF1A09, NoSymbol, NoSymbol ] }; // 9 ⁹ ↗
    key <KP4>  { [ UF1A04, UF1A28, UF1A4C, NoSymbol ] }; // 4 ⁴ ←
    key <KP5>  { [ UF1A05, UF1A29, UF1A4D, NoSymbol ] }; // 5 ⁵ →
    key <KP6>  { [ U200D, UF1A06, NoSymbol, NoSymbol ] }; // 6 ⁶ →
    key <KP1>  { [ UF1A01, UF1A25, UF1A49, NoSymbol ] }; // 1 ¹ ↙
    key <KP2>  { [ UF1A02, UF1A26, UF1A4A, NoSymbol ] }; // 2 ² ↓
    key <KP3>  { [ UF1A03, UF1A27, UF1A4B, NoSymbol ] }; // 3 ³ ↘
    key <KP0>  { [ UF1A00, UF1A24, UF1A48, NoSymbol ] }; // 0 ⁰ ↕
};

